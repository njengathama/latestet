<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/back"
    android:padding="20dp"


    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wearapp.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="100dp"

        android:orientation="vertical">



        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="240sp"

            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="6sp"
            card_view:cardElevation="1sp"
            card_view:cardUseCompatPadding="true">
            <ImageView
                android:src="@drawable/logo"

                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="75sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="#006400"
                android:text="Mobile Version  "
                />
        </android.support.v7.widget.CardView>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_account"
                android:layout_width="0sp"
                android:layout_height="130sp"
                android:layout_weight="0.5"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardCornerRadius="8sp"
                card_view:cardUseCompatPadding="true"

                android:focusable="true">

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/account_infor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="70sp"
                        android:layout_height="70sp"
                        android:layout_gravity="center"
                        android:padding="5sp"
                        android:src="@drawable/chrs" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="31sp"
                        android:layout_marginBottom="4sp"
                        android:layout_marginEnd="5sp"
                        android:layout_marginStart="5sp"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:text="emr 1"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_agent_locator"
                android:layout_width="0sp"
                android:layout_height="130sp"
                android:layout_weight="0.5"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardCornerRadius="8sp"
                card_view:cardElevation="1sp"
                card_view:cardUseCompatPadding="true"
                android:focusable="true">

                <LinearLayout
                    android:id="@+id/loan_cal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="70sp"
                        android:layout_height="70sp"
                        android:layout_gravity="center"
                        android:padding="5sp"
                        android:src="@drawable/ihris" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="31sp"
                        android:layout_marginBottom="4sp"
                        android:layout_marginEnd="5sp"
                        android:layout_marginStart="5sp"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:text="emr 2"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <!--row2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"

                android:layout_width="0sp"
                android:layout_height="130sp"
                android:layout_weight="0.5"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardCornerRadius="8sp"
                card_view:cardElevation="2sp"
                card_view:cardUseCompatPadding="true"
                android:focusable="true">

                <LinearLayout
                    android:id="@+id/loan_application"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="70sp"
                        android:layout_height="70sp"
                        android:layout_gravity="center"
                        android:padding="5sp"
                        android:src="@drawable/emem" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="31sp"
                        android:layout_marginBottom="4sp"
                        android:layout_marginEnd="5sp"
                        android:layout_marginStart="5sp"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:text="emr 3"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_send_cash"
                android:layout_width="0sp"
                android:layout_height="130sp"
                android:layout_weight="0.5"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardCornerRadius="8sp"
                card_view:cardElevation="2sp"
                card_view:cardUseCompatPadding="true"
                android:focusable="true">

                <LinearLayout
                    android:id="@+id/loan_repayment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="70sp"
                        android:layout_height="70sp"
                        android:layout_gravity="center"
                        android:padding="5sp"
                        android:src="@drawable/emr" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="31sp"
                        android:layout_marginBottom="4sp"
                        android:layout_marginEnd="5sp"
                        android:layout_marginStart="5sp"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:text="emr 4"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />

                </LinearLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>

        <!--row3-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="0sp"
                android:layout_height="130sp"
                android:layout_weight="0.5"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardCornerRadius="8sp"
                card_view:cardElevation="2sp"
                card_view:cardUseCompatPadding="true"
                android:focusable="true">

                <LinearLayout
                    android:id="@+id/cv_huduma_center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/category_photo"
                        android:layout_width="70sp"
                        android:layout_height="70sp"
                        android:layout_gravity="center"
                        android:padding="5sp"
                        android:src="@drawable/fun" />

                    <TextView
                        android:id="@+id/category_name"
                        android:layout_width="match_parent"
                        android:layout_height="31sp"
                        android:layout_marginBottom="4sp"
                        android:layout_marginEnd="5sp"
                        android:layout_marginStart="5sp"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:text="FUNSOFT"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_statement"
                android:layout_width="0sp"
                android:layout_height="130sp"
                android:layout_weight="0.5"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardCornerRadius="8sp"
                card_view:cardElevation="2sp"
                card_view:cardUseCompatPadding="true"
                android:focusable="true">

                <LinearLayout
                    android:id="@+id/ministatements"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="70sp"
                        android:layout_height="70sp"
                        android:layout_gravity="center"
                        android:padding="5sp"
                        android:src="@drawable/logo" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="31sp"
                        android:layout_marginBottom="4sp"
                        android:layout_marginEnd="5sp"
                        android:layout_marginStart="5sp"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:text="System A "
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <!--row4-->

        <LinearLayout
            android:id="@+id/cv_snacks1"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="0sp"
                android:layout_height="130sp"
                android:layout_weight="0.5"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardCornerRadius="8sp"
                card_view:cardElevation="2sp"
                card_view:cardUseCompatPadding="true"
                android:focusable="true">

                <LinearLayout
                    android:id="@+id/cv_snacks"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/category_snackss"
                        android:layout_width="70sp"
                        android:layout_height="70sp"
                        android:layout_gravity="center"
                        android:padding="5sp"
                        android:src="@drawable/ke" />

                    <TextView
                        android:id="@+id/category_snacks"
                        android:layout_width="match_parent"
                        android:layout_height="31sp"
                        android:layout_marginBottom="4sp"
                        android:layout_marginEnd="5sp"
                        android:layout_marginStart="5sp"
                        android:gravity="center"
                        android:text="kenyaemr"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />


                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </LinearLayout>

</ScrollView>
